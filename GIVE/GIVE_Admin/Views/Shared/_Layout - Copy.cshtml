		}

		table tr:nth-child(even) {
			background-color: #BEF2F5
		}

		.pagination li:hover {
			cursor: pointer;
		}
		.navbar-inverse .navbar-nav > li > a {
			color: #ffffff;
		}

		.bodybackground {
			
