

@model DoubbleAdmin.Models.Login

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<section id="loginForm">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        if (@ViewBag.message != null)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-danger p-2 mx-auto col-sm-12 col-md-5" role="alert">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <h4 class="alert-heading">There was a problem!</h4>
                        <p class="mb-0">@ViewBag.message!.</p>
                    </div>
                </div>
            </div>
        }

        <h1>Login Form</h1>
            <div class="form-group">

                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Username", @required = "", @name="username", @id = "username" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">

                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @required = "", @name="password", @id = "password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Log in" class="btn btn-default submit" id="export" />

                    </div>
                </div>

            <div class="clearfix"></div>





    }

    </section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">


        $('#export').click(function () {
            var url = "/Login/Login";
            var username = $("#username").val();
            var password = $("#password").val();
            $.post(url, { username: username, password: password }, function (data) {
                $("#msg").html(data);
            });
        })

    </script>



}
