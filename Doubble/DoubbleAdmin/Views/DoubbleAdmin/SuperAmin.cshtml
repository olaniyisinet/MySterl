
@{
    ViewBag.Title = "Super Admin";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Super Admin</title>
</head>
<body>
    <div class="fas fa-sign-out-alt" style="text-align: right;">@Html.ActionLink("Log Out", "LogOff", "Login")</div>
    <ul class="nav side-menu">
        <li>@Html.ActionLink("Change Role", "ChangeRole", "DoubbleAdmin")</li>

    </ul>
@using (Html.BeginForm("SuperAmin", "DoubbleAdmin", FormMethod.Post))
{
    <br />
    <br />
    if (@ViewBag.message != null)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger p-2 mx-auto col-sm-12 col-md-5" role="alert">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <h4 class="alert-heading">There was a problem!</h4>
                    <p class="mb-0">@ViewBag.message!.</p>
                </div>
            </div>
        </div>
    }
    <br />
    <div> 
        <input type="text" class="form-control form-control-sm" id="inlineFormInput" placeholder="Username" name="Username" required=""/>
        <br />
        @Html.DropDownList("Role", ViewBag.roles as SelectList, new { @class = "form-control form-control-sm", @id = "lastName", @placeholder = "", @required = "", @value = "" })
        <br />
        <button class="btn btn-danger my-2 btn-block" type="submit" id="submit">Create Account</button>
    </div>
}
</body>
</html>
