@model Doubble.Models.Login
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@using (Html.BeginForm("CahngePwd", "Dashboard", FormMethod.Post))
{

    <div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-12 col-md-12 py-3">
                        <!--<h2 class="my-4">Doubble</h2>-->
                        <!--<hr>-->
                    </div>
                </div>
            </div>
            @if (@ViewBag.message != null)
            {

                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-danger p-2 mx-auto col-sm-12 col-md-4" role="alert">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            <h4 class="alert-heading">There was a problem!</h4>
                            <p class="mb-0">@ViewBag.message!.</p>
                        </div>
                    </div>
                </div>
            }

            <div class="row py-3">
                <div class="order-md-1 w-100 mx-auto box-shadow p-4 col-sm-12 col-12 col-md-4">
                    <h2 class="mb-3">Change Password</h2>
                    <p class="my-3">Change Password to manage your Application.</p>
                    <form action="confirmation.html" autocomplete="off">

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label for="userName">New Password</label>
                                <div>
                                    <input type="password" class="form-control form-control-sm" placeholder="New Password" required="" name="new_pwd" id="userName" value="" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label for="Password">Confirm Password</label>
                                <div>
                                    <input type="password" class="form-control form-control-sm" placeholder="Confirm Password" required="" name="conf_pwd"  id="userName" value=""/>
                                </div>
                            </div>
                        </div>

                        @Html.HiddenFor(md => md.BVN)



                        <button class="btn btn-block btn-danger my-2" type="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    

                        
                        
                        




}
